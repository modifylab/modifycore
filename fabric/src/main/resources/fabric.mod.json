{
    "schemaVersion": 1,
    "id": "modifycore",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}"
    ],
    "contact": {
        "homepage": "https://www.curseforge.com/minecraft/mc-mods/modifycore",
        "sources": "https://github.com/modifylab/modifycore",
        "issues": "https://github.com/modifylab/modifycore/issues"
    },
    "license": "Public Domain",
    "icon": "modifycore-icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "com.modifylab.modifycore.FabricInitializer"
        ]
    },
    "mixins": [
        "modifycore.fabric.mixins.json"
    ],

    "custom": {
        "modmenu": {
            "links": {
                "modmenu.discord": "https://discord.gg/DdR3WNUWzF",
                "modmenu.curseforge": "https://www.curseforge.com/minecraft/mc-mods/modifycore",
                "modmenu.modrinth": "https://modrinth.com/mod/modifycore",
                "modmenu.patreon": "https://www.patreon.com/modifylab"
            },
            "badges": [ "library" ],
            "update_checker": true
        }
    },

    "depends": {
        "fabric-resource-loader-v0": "*",
        "fabricloader": ">=0.14",
        "minecraft": ">=1.20",
        "java": ">=17"
    }
}
  